CXX := c++
CXXFLAGS := -Wall -Wextra -Werror -std=c++98 -g
NAME := RPN
SRC := main.cpp RPN.cpp
OBJ := $(SRC:.cpp=.o)
HEADERS := RPN.hpp

all: $(NAME)

$(NAME): $(OBJ)
	$(CXX) $(CXXFLAGS) $(OBJ) -o $(NAME)

%.o : %.cpp $(HEADERS)
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re